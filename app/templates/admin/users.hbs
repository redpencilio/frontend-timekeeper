{{page-title "Users"}}

<div class="overflow-auto p-8 pr-0">
  <h1 class="text-2xl font-semibold text-red-700">Users</h1>
  <div class="mt-4 flow-root">
    <div class="-mx-4 -my-2 overflow-x-auto sm:-mx-6 lg:-mx-8">
      <div class="inline-block min-w-full py-2 align-middle sm:px-6 lg:px-8">
        <table class="min-w-full divide-y divide-gray-300">
          <thead>
            <tr>
              {{#each (array "Name" "Kimai account" "User groups" "") as |header|}}
                <th
                  scope="col"
                  class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900"
                >
                  {{header}}
                </th>
              {{/each}}
            </tr>
          </thead>
          <tbody class="divide-y divide-gray-200">
            {{#each @model as |person|}}
              <tr class="hover:bg-gray-50">
                <td
                  class="whitespace-nowrap py-4 px-3 text-sm font-medium text-gray-900"
                >
                  {{person.name}}
                </td>
                <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500">
                  <div class="w-64">
                    <KimaiAccountSelect @person={{person}} />
                  </div>
                </td>
                <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500">
                  <div class="flex flex-wrap gap-2">
                    {{#each person.userGroups as |userGroup|}}
                      <span
                        class="inline-flex items-center rounded-full bg-gray-100 px-2 py-1 text-xs font-medium text-gray-600"
                      >
                        {{userGroup.name}}
                      </span>
                    {{/each}}
                  </div>
                </td>
                <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500">
                  <div>
                    <LinkTo
                      @route="admin.users.user"
                      @model={{person.id}}
                      class="font-normal text-red-700 hover:text-red-600"
                    >Manage</LinkTo>
                  </div>
                </td>
              </tr>
            {{/each}}
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
{{outlet}}