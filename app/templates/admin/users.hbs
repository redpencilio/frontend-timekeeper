{{page-title "User Management"}}

<div class="p-8 bg-white rounded-lg">
  <h1 class="text-2xl font-semibold text-red-700">User Management</h1>
  <div class="mt-6 overflow-hidden border border-gray-200 rounded-lg">
    <table class="min-w-full divide-y divide-gray-200">
      <thead class="bg-gray-50">
        <tr>
          <th scope="col" class="py-3 pl-6 pr-3 text-left text-sm font-semibold text-gray-700 sm:pl-8">
            Name
          </th>
          <th scope="col" class="px-6 py-3 text-left text-sm font-semibold text-gray-700">
            Kimai Account
          </th>
          <th scope="col" class="px-6 py-3 text-left text-sm font-semibold text-gray-700">
            User Groups
          </th>
        </tr>
      </thead>
      <tbody class="divide-y divide-gray-200 bg-white">
        {{#each @model as |person|}}
          <tr class="hover:bg-gray-50">
            <td class="whitespace-nowrap py-4 pl-6 pr-3 text-sm font-medium text-gray-900 sm:pl-8">
              {{person.name}}
            </td>
            <td class="whitespace-nowrap px-6 py-4 text-sm text-gray-700">
              <div class="w-64">
                <KimaiAccountSelect @person={{person}} />
              </div>
            </td>
            <td class="whitespace-nowrap px-6 py-4 text-sm text-gray-700">
              <div class="flex flex-wrap gap-2">
                {{#each person.userGroups as |userGroup|}}
                  <span class="select-none px-2 py-1 text-xs font-medium text-blue-700 bg-blue-100 rounded-full">
                    {{userGroup.name}}
                  </span>
                {{/each}}
              </div>
            </td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</div>
