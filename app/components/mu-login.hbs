<div class="flex min-h-full flex-col justify-center px-6 py-12 lg:px-8">
  <div class="sm:mx-auto sm:w-full sm:max-w-sm">
    {{! <img
      class="mx-auto h-10 w-auto"
      src="https://tailwindui.com/plus/img/logos/mark.svg?color=indigo&shade=600"
      alt="Your Company"
    /> }}
    <h2
      class="mt-10 text-center text-2xl/9 font-bold tracking-tight text-red-900"
    >Sign in to your account</h2>
  </div>

  <div class="mt-10 sm:mx-auto sm:w-full sm:max-w-sm">
    <form class="mu-login space-y-6" {{on "submit" this.login}}>
      <div>
        <label
          for="mu-login-username"
          class="block text-sm/6 font-medium text-red-900"
        >Email address</label>
        <div class="mt-2">
          <input
            id="mu-login-username"
            value={{this.nickname}}
            name="email"
            type="email"
            autocomplete="email"
            required
            class="block w-full rounded-md border-0 py-1.5 text-red-900 shadow-sm ring-1 ring-inset ring-red-600 placeholder:text-red-400 focus:ring-2 focus:ring-inset focus:ring-red-600 sm:text-sm/6"
            {{on "input" (with-value (fn (mut this.nickname)))}}
          />
        </div>
      </div>

      <div>
        <div class="flex items-center justify-between">
          <label
            for="mu-login-password"
            class="block text-sm/6 font-medium text-red-900"
          >Password</label>
        </div>
        <div class="mt-2">
          <input
            id="mu-login-password"
            name="password"
            type="password"
            autocomplete="current-password"
            required
            class="block w-full rounded-md border-0 py-1.5 text-red-900 shadow-sm ring-1 ring-inset ring-red-600 placeholder:text-red-400 focus:ring-2 focus:ring-inset focus:ring-red-600 sm:text-sm/6"
            {{on "input" (with-value (fn (mut this.password)))}}
          />
        </div>
      </div>

      <div>
        <Button @skin="primary" type="submit" class="w-full">Sign in</Button>
      </div>
    </form>
    {{#if this.errorMessage}}
      <div class="mt-8 feedback-message" />
      <Alert
        @skin="error"
        @title="Something went wrong"
        @message={{this.errorMessage}}
      />
    {{/if}}
  </div>
</div>