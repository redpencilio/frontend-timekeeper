<div class="flex min-h-full flex-col justify-center px-6 py-12 lg:px-8">
  <div class="sm:mx-auto sm:w-full sm:max-w-sm">
    <h2
      class="mt-10 text-center text-2xl/9 font-bold tracking-tight text-red-600"
    >Sign in to your account</h2>
  </div>

  <div class="mt-10 sm:mx-auto sm:w-full sm:max-w-sm">
    <form class="mu-login space-y-6" {{on "submit" this.login}}>
      <div>
        <label
          for="mu-login-username"
          class="block text-sm/6 font-medium text-gray-900"
        >Email address</label>
        <div class="mt-2">
          <TkInput
            id="mu-login-username"
            value={{this.nickname}}
            name="email"
            type="email"
            autocomplete="email"
            required
            {{on "input" (with-value (fn (mut this.nickname)))}}
          />
        </div>
      </div>

      <div>
        <div class="flex items-center justify-between">
          <label
            for="mu-login-password"
            class="block text-sm/6 font-medium text-gray-900"
          >Password</label>
        </div>
        <div class="mt-2">
          <TkInput
            id="mu-login-password"
            name="password"
            type="password"
            autocomplete="current-password"
            required
            {{on "input" (with-value (fn (mut this.password)))}}
          />
        </div>
      </div>

      <div>
        <Button
          @isLoading={{this.isAuthenticating}}
          @skin="primary"
          type="submit"
          class="w-full"
        >Sign in</Button>
      </div>
    </form>
    {{#if this.errorMessage}}
      <div class="mt-8 feedback-message" />
      <Alert
        @skin="error"
        @title="Something went wrong"
        @message={{this.errorMessage}}
      />
    {{/if}}
  </div>
</div>