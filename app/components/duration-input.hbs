<input
  type="text"
  class="mt-1 block h-10 w-20 rounded border-gray-200 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm"
  value={{this.textValue}}
  {{on "change" this.onChange}}
  {{select-on "click"}}
  {{this.durationInputModifier}}
  required={{this.isRequired}}
  ...attributes
/>