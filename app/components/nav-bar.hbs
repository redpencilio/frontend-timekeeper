<div class="group flex h-12 items-center justify-between border-b">
  <div></div>
  <div class="flex items-center justify-between gap-4 px-6 py-4">
    <LinkTo
      @route="year.month"
      @models={{this.previousMonthRouteModel}}
      class="text-red-700 opacity-0 transition-opacity duration-150 ease-in-out group-hover:opacity-100"
    >
      {{svg-jar "chevron-left" class="size-5"}}
    </LinkTo>
    <div class="w-64">
      <BasicDropdown as |dd|>
        <dd.Trigger
          class="flex items-center justify-center gap-2 text-xl font-medium text-red-700"
        >
          {{this.monthYearLabel}}
          <div
            class="opacity-0 transition-opacity duration-150 ease-in-out group-hover:opacity-100"
          >
            {{svg-jar "chevron-down" class="size-5"}}
          </div>
        </dd.Trigger>
        <dd.Content>
          <div class="w-96 rounded bg-white p-4 shadow">
            Test
          </div>
        </dd.Content>
      </BasicDropdown>
    </div>
    <LinkTo
      @route="year.month"
      @models={{this.nextMonthRouteModel}}
      class="text-red-700 opacity-0 transition-opacity duration-150 ease-in-out group-hover:opacity-100"
    >
      {{svg-jar "chevron-right" class="size-5"}}
    </LinkTo>
  </div>
  <div class="mr-4 flex items-center justify-between">
    <LinkTo class="text-sm font-medium text-red-700" @route="profile">
      <div class="flex items-center gap-2">

        {{svg-jar "person-circle"}}
        {{person-first-name this.userProfile.user.name}}
      </div>
    </LinkTo>
  </div>
</div>