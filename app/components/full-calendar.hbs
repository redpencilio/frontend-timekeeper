{{#if this.clickedDateInfo}}
  <TimeLogPopover
    @anchorElement={{this.clickedDateElement}}
    @workLogs={{this.workLogsForClickedDate}}
    @onSave={{this.save}}
    @onCancel={{this.cancel}}
  />
{{/if}}
{{#if this.clickedEventInfo}}
  <TimeEditPopover
    @anchorElement={{this.clickedDateElement}}
    @selectedHourLog={{this.clickedWorkLog}}
    @onSave={{this.editWorkLog}}
    @onCancel={{this.cancel}}
    @onDelete={{fn this.deleteWorkLog this.clickedWorkLog}}
  />
{{/if}}
<div
  class="full-calendar h-full"
  {{did-update this.updateAndRerenderCalendar @events}}
  {{did-update this.gotoFocusDate @focusDate}}
  {{did-update this.updateDisabled @isDisabled}}
  {{did-insert this.setupCalendar}}
></div>