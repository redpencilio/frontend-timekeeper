{{#let (unique-id) as |inputId|}}
  <input
    type="radio"
    id={{inputId}}
    class="hidden peer"
    checked={{@checked}}
    {{on "click" @onClick}}
  />
  <label
    for={{inputId}}
    class="inline-flex text-sm items-center justify-between w-full px-4 py-2 text-red-500 bg-white border border-red-200 rounded-full cursor-pointer peer-checked:border-blue-600 peer-checked:text-blue-600 hover:text-red-600 hover:bg-red-100"
  >
    <div class="flex items-center">
      <span
        class="inline-block w-3 h-3 rounded-full mr-3"
        {{bg-color (task-color @task)}}
      ></span>
      <span class="text-red-700">{{task-name @task}}</span>
    </div>
  </label>
{{/let}}